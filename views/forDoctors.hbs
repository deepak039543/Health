    <div class="formbold-main-wrapper">

        <div class="formbold-form-wrapper">
            <form action="/submit_info" method="POST" enctype="multipart/form-data">
                <h2>Registration Form</h2>
                <p>if you already sign up then click here <a style="color:blue;" href="/loginDoctor">login</a></p>
                <div class="formbold-input-group">
                    <label for="name" class="formbold-form-label"></label>
                    <input type="text" name="name" id="name" placeholder="Enter your name"
                        class="formbold-form-input" />
                </div>

                <div class="formbold-input-group">
                    <label for="username" class="formbold-form-label"> </label>
                    <input type="text" name="username" id="username" placeholder="Enter username"
                        class="formbold-form-input" />
                </div>

                <div class="formbold-input-group">
                    <label class="formbold-form-label">
                       
                    </label>

                    <select class="formbold-form-select" name="org" id="org">
                        <option value disabled selected>Select Hospital</option>
                        {{#each hospitals}}
                        <option value="{{name}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="formbold-input-group">
                    <label for="qualifications" class="formbold-form-label">
                        </label>
                    <input type="text" name="qualifications" id="qualifications" placeholder="Enter your qualifications"
                        class="formbold-form-input" />
                </div>

                <div class="formbold-input-group">
                    <label for="specialization" class="formbold-form-label">
                        </label>
                    <input type="text" name="specialization" id="specialization" placeholder="Enter your specialization"
                        class="formbold-form-input" />
                </div>
                 <div class="formbold-input-group">
                    <label for="email" class="formbold-form-label"> 
                    </label>
                    <input type="email" name="email" id="email" placeholder="Enter your email"
                        class="formbold-form-input" />
                </div>
                <div class="formbold-input-group">
                    <label for="phone" class="formbold-form-label">  </label>
                    <input type="text" name="phone" id="phone" placeholder="Enter your phone number"
                        class="formbold-form-input" />
                </div>
 <div class="formbold-input-group">
                    <label for="experience" class="formbold-form-label"> 
                         </label>
                    <input type="text" name="experience" id="experience" placeholder="Write about your experience"
                        class="formbold-form-input" />
                </div>
                <div class="formhold-input-group">
                    <label for="images" class="formbold-form-label"> Attach Profile
                        Image</label>
                    <input type="file" id="images" class="formbold-form-input" name="images"
                        accept="image/jpg, image/png" multiple>
                </div>

                <div class="formhold-input-group">
                    <label for="documents" class="formbold-form-label"> Attach Documents</label>
                    <input type="file" id="documents" class="formbold-form-input" name="documents" multiple>
                </div>

                <div class="formhold-input-group">
                    <label for="message" class="formbold-form-label">
                        
                    </label>
                    <textarea rows="4" name="message" id="message" placeholder="Extra info about You (optional)..."
                        class="formbold-form-input"></textarea>
                </div>
                <div class="formbold-input-group">
                    <label for="password" class="formbold-form-label"> </label>
                    <input type="text" name="password" id="password" placeholder="Enter new Password"
                        class="formbold-form-input" />
                </div>

                <button class="formbold-btn">Submit</button>
            </form>
        </div>
    </div>

