    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/themify-icons.css">
    <link rel="stylesheet" href="./css/style.css">
    <style>
        body {
            font-family: "poppins", sans-serif;
            background-color: #f5fbff;

        }

        .card {
            width: 300px;
            margin: 20px;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            text-align: center;
        }

        .card-content {
            padding: 20px;
        }

        .card-name {
            font-size: 1.2rem;

            margin: 5px 0;
        }

        .card-phone {
            font-size: 1rem;
            color: #666;
            margin: 5px 0;
        }

        .card-buttons {
            margin-top: 20px;
        }

        .btn-accept,
        .btn-deny {
            padding: 10px 20px;
            margin: 0 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-accept {
            background-color: #4CAF50;
            color: #fff;
        }

        .btn-deny {
            background-color: #f44336;
            color: #fff;
        }

        .cards {

            display: flex;
            flex-wrap: wrap;
            justify-content: left;
           
        }

        .slice {
            margin-top: 5%;
             margin-left:3%;

        }

        .add-button {
            margin-top: 5%;
            margin-left:3%;
            display: flex;
        }
    </style>
</head>

<body>
    <header>
        <div class="header-area ">
