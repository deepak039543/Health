    <link rel="stylesheet" href="../css/style.css">
    <style>
        body {
            font-family:"poppins", sans-serif;
            background-color: #f5fbff;
        }

        .card {
            width: 400px;
            margin: 20px;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            text-align: center;
        }

        .card-image {
            border-radius: 50%;
            width: 200px;
            height: 200px;
            margin: 20px auto;
            object-fit: cover;
        }

        .card-content {
            padding: 20px;
        }

        .card-name {
            font-size: 1.2rem;
            font-weight: bold;
            margin: 10px 0;
            padding: 5px;
        }

        .card-qualification {
            font-size: 1rem;
            color: black;
            margin: 5px 0;
             padding: 3px;
        }

        .card-specialization {
            font-size: 1rem;
              color: black;
            margin: 5px 0;
             padding: 3px;
        }

        .card-email {
            font-size: 1rem;
            color: black;
            margin: 5px 0;
             padding: 3px;
        }

        .card-phone {
            font-size: 1rem;
             color: black;
            margin: 5px 0;
             padding: 3px;
        }

        .appointment-button {
            background-color:#1e79a1 ;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            margin: 20px 0;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .appointment-button:hover {
            color: black ;
        }

        .card-container {

            display: flex;
            flex-wrap: wrap;
            justify-content: left;
            /*justify the images in page (left,center ,right)*/
        }
        .slice{
            margin-top: 5%;
            margin-left:3%
        }
        .documents{
            color:#1e79a1;
        }
    </style>
</head>

<body>
    <header>
        <div class="header-area ">
            <div id="sticky-header" class="main-header-area">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-3 col-lg-2">
                            <div class="logo">
                                <a href="index.html">
                                    <img src="../img/indian.png" alt="images">
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-7">
                            <div class="main-menu  d-none d-lg-block">
                                <nav>
                                     <ul id="navigation">
                                            <li><a href="/registeredHospitals">Find
                                                    Doctors</a></li>
                                            <li><a href="/registeredLab">Book
                                                    Lab Test</a></li>
                                            <li><a href="#">Service Providers<i
                                                        class="ti-angle-down"></i></a>
                                                <ul class="submenu">
                                                    <li><a href="/forHospitals">By
                                                            Hospitals</a></li>
                                                    <li><a href="/forDoctors">By
                                                            Doctors</a></li>
                                                    <li><a href="/labForm">By
                                                            Laboratory</a></li>
                                                </ul>
                                            </li>
                                             <li><a href="#">Others<i
                                                        class="ti-angle-down"></i></a>
                                                <ul class="submenu">
                                                   <li><a href="/showBlogs">Read
                                                    Blogs</a></li>
                                                    <li><a href="/insurance">about government schema</a></li>
                                                    <li><a href="/findDoctors">check hospital under MA Amrutum
                                                            </a></li>
                                                </ul>
                                            </li>

                                        </ul>
                                </nav>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 d-none d-lg-block">
                            <div class="Appointment">
                                <div class="book_btn d-none d-lg-block">
                                    <a class="popup-with-form" href="#test-form">Make an
                                        Appointment</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="slice">
        <h1>Welcome ,{{hospital.name}}</h1>
        <p>Here you can check you doctors list</p>
    </div>
    <div class="card-container">
        {{#each details}}
        <div class="card">
            <img class="card-image" src="../doctorsUploads/{{images}}" alt="Profile Image">
            <div class="card-content">
                <div class="card-name"> Name : {{name}}</div>
                <div class="card-qualification">Qualifications : {{qualifications}}</div>
                <div class="card-specialization"> specialization : {{specialization}}</div>
                <div class="card-specialization">experience : {{experience}}</div>
                <div class="card-specialization"> extraInfo : {{message}}</div>
                   <div class="card-email">{{email}}</div>
                <div class="card-phone">{{phone}}</div>
                <div>
                    <a href="../doctorsUploads/{{documents}}" target="_blank" class="documents">view documents
                    </a>
                </div>
                <div style="margin-top :3px; padding:5px">
                    <a href="#" class="appointment-button">Varified
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

