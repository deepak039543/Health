                <div class="formbold-input-group">
                    <label for="password" class="formbold-form-label"></label>
                    <input type="text" name="password" id="password" placeholder="Enter new Password" class="formbold-form-input" />
                </div>
              
                <button class="formbold-btn">Submit</button>
