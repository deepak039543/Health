    <div class="formbold-main-wrapper">
 
        <div class="formbold-form-wrapper">
            <form action="" method="POST">
              <h2>Registration Form</h2>
              <p>if you already sign up then click here <a style="color:blue;" href="/hospitalLogin">login</a></p>
                <div class="formbold-input-group">
                    <label for="name" class="formbold-form-label"> </label>
                    <input type="text" name="name" id="name" placeholder="Enter your Hospital name"
                        class="formbold-form-input" />
                </div>
                <div class="formbold-input-group">
                    <label for="username" class="formbold-form-label"></label>
                    <input type="text" name="username" id="username" placeholder="Enter username"
                        class="formbold-form-input" />
                </div>

                <div class="formbold-input-group">
                    <label for="type" class="formbold-form-label"> </label>
                    <input type="text" name="type" id="type" placeholder="Enter Hospital type (government / private)"
                        class="formbold-form-input" />
                </div>

                <div class="formbold-input-group">
                    <label for="address" class="formbold-form-label">  </label>
                    <input type="text" name="address" id="address" placeholder="Enter your full address" class="formbold-form-input" />
                </div>

                 <div class="formbold-input-group">
                    <label for="district" class="formbold-form-label"></label>
                    <input type="text" name="district" id="district" placeholder="Enter your full address" class="formbold-form-input" />
                </div>


                <div class="formbold-input-group">
                    <label for="pincode" class="formbold-form-label">  </label>
                    <input type="text" name="pincode" id="pincode" placeholder="Enter your pincode" class="formbold-form-input" />
                </div>

                <div class="formbold-input-checkbox-wrapper">
                    <label class="formbold-form-label">
                        Services Provided:
